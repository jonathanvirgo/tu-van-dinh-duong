<div class="sidebar offcanvas-lg" id="sidebar" tabindex="-1">
  <button class="sidebar-close btn-close d-lg-none" type="button" data-bs-dismiss="offcanvas" data-bs-target="#sidebar" aria-label="Close"></button>
  <a class="sidebar-logo" href="/">
    <img class="sidebar-logo-full" src="/public/content/images/logo3.png" alt="">
    <img class="sidebar-logo-compact" src="/public/content/images/logo3-compact.png" alt="">
  </a>
  <ul class="nav sidebar-nav">
    <li class="nav-item">
      <a class="nav-link <%= link == 'dashboard' ? 'active' : ''%>" aria-current="page" href="/">
        <svg class="iconsvg-grid nav-icon">
          <use xlink:href="/public/content/images/sprite.svg#grid"></use>
        </svg>
        <span class="nav-text">Dashboard</span>
      </a>
    </li>
    <% if (user){%>
      <%if([1,3,4,5].includes(user.role_id[0])){ %>
        <li class="nav-item-header">KHÁM BỆNH</li>
        <li class="nav-item">
          <a class="nav-link <%= link == 'examine' ? 'active' : ''%>" href="/examine">
            <svg class="iconsvg-sort-arrow-down nav-icon">
              <use xlink:href="/public/content/images/sprite.svg#sort-arrow-down"></use>
            </svg>
            <span class="nav-text">Danh sách phiếu khám</span>
          </a>
        </li>
        <li class="nav-item-btn">
          <a id="btn_sidebar_create_article" class="btn nav-link btn-side-bar sidebar-btn-post w-100 <%= link == 'examine-page' ? 'active' : ''%>" href="/examine/create">
            <svg class="iconsvg-edit">
              <use xlink:href="/public/content/images/sprite.svg#edit"></use>
            </svg>
            <span class="nav-text">Tiếp nhận khám</span>
          </a>
        </li>
      <% } %>
      <% if (user.isAdmin == true || !user.role_id.includes(2)){%>
      <li class="nav-item-btn">
        <a href="/admin" class="btn nav-link btn-side-bar sidebar-btn-post w-100">
          <svg class="iconsvg-edit">
            <use xlink:href="/public/content/images/sprite.svg#monitor"></use>
          </svg>
          <span class="nav-text">Admin</span>
        </a>
      </li>
      <%}%>
    <%}%>
  </ul>
  <div class="auto-save-loading" id="loadingAutoSave" style="display: none;">Đang lưu tự động</div>
</div>