<form id="thucdonmau_form" class="form-horizontal">
    <h3 class="box-title-break">Thực đơn mẫu</h3>
    <div class="row g-2 align-items-center">
        <div class="col-12 col-md-5 d-flex">
            <label class="col-form-label col-md-auto fw-bold mt-2" for="menu_id">Chọn menu</label>
            <div class="col-form-body col-md">
                <div class="input-group">
                    <div style="flex-grow:1;">
                        <select class="form-select" id="menu_id" data-plugin="select2" data-placeholder="Chọn menu" style="width: 90%;">
                    
                        </select>
                    </div>
                    <button class="btn btn-primary" type="button" onclick="addMenu()">Thêm</button>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3 d-flex">
            <label class="col-form-label col-md-auto fw-bold mt-2" for="menuTime_id">Chọn giờ ăn</label>
            <div class="col-form-body col-md">
                <div class="form-control-has-addon">
                    <select class="form-select" id="menuTime_id" data-plugin="select2" data-placeholder="Chọn giờ ăn">
                        <option></option>
                        <% if(menuTime.length > 0){ %>
                            <% for (let mt of menuTime){ %>
                                <option value="<%= mt.id %>"><%= mt.name %></option>
                            <%}%>   
                        <%}%>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4 d-flex">
            <label class="col-form-label col-md-auto fw-bold mt-2" for="course">Tên món</label>
            <div class="col-form-body col-md">
                <div class="form-control-has-addon">
                    <input type="text" class="form-control form-control-title" id="course" placeholder="Tên món">
                    <button class="btn form-control-addon btn-link p-0 min-h-auto" type="button" onclick="clearInput('#course')">
                        <svg class="iconsvg-close">
                            <use xlink:href="/public/content/images/sprite.svg#close"></use>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="row g-2 align-items-center">
        <div class="col-12 col-md-3 d-flex">
            <label class="col-form-label col-md-auto fw-bold mt-2" for="food_name">Thực phẩm</label>
            <div class="col-form-body col-md">
                <div class="form-control-has-addon">
                    <select class="form-select" id="food_name" data-plugin="select2" data-placeholder="Chọn thực phẩm">
                        
                    </select>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3 d-flex">
            <label class="col-form-label col-md-auto fw-bold mt-2" for="weight_food">Khối lượng</label>
            <div class="col-form-body col-md">
              <div class="input-group">
                <input type="number" class="form-control form-control-title p-1" id="weight_food" placeholder="Khối lượng">
                <button class="btn btn-primary" type="button" onclick="addFoodToMenu()">Thêm</button>
              </div>
            </div>
        </div>
        <div class="col-12 col-md-3 d-flex">
            <label class="col-form-label col-md-auto fw-bold mt-2" for="energy_food">Energy</label>
            <div class="col-form-body col-md">
              <div class="form-control-has-addon">
                <input type="text" class="form-control form-control-title p-1" id="energy_food" placeholder="Energy" readonly>
              </div>
            </div>
        </div>
        <div class="col-12 col-md-3 d-flex">
            <label class="col-form-label col-md-auto fw-bold mt-2" for="protein_food">Protein</label>
            <div class="col-form-body col-md">
              <div class="form-control-has-addon">
                <input type="text" class="form-control form-control-title p-1" id="protein_food" placeholder="Protein" readonly>
              </div>
            </div>
        </div>
    </div>
    <div class="row g-2 align-items-center">
        <div class="col-12 col-md-3 d-flex">
            <label class="col-form-label col-md-auto fw-bold mt-2" for="animal_protein">Animal Protein</label>
            <div class="col-form-body col-md">
                <div class="form-control-has-addon">
                    <input type="text" class="form-control form-control-title p-1" id="animal_protein" placeholder="Animal Protein" readonly>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3 d-flex">
            <label class="col-form-label col-md-auto fw-bold mt-2" for="lipid_food">Lipid</label>
            <div class="col-form-body col-md">
              <div class="form-control-has-addon">
                <input type="text" class="form-control form-control-title p-1" id="lipid_food" placeholder="Lipid" readonly>
              </div>
            </div>
        </div>
        <div class="col-12 col-md-3 d-flex">
            <label class="col-form-label col-md-auto fw-bold mt-2" for="unanimal_lipid">Unanimal Lipid</label>
            <div class="col-form-body col-md">
              <div class="form-control-has-addon">
                <input type="text" class="form-control form-control-title p-1" id="unanimal_lipid" placeholder="Unanimal Lipid" readonly>
              </div>
            </div>
        </div>
        <div class="col-12 col-md-3 d-flex">
            <label class="col-form-label col-md-auto fw-bold mt-2" for="carbohydrate">Carbohydrate</label>
            <div class="col-form-body col-md">
              <div class="form-control-has-addon">
                <input type="number" class="form-control form-control-title p-1" id="carbohydrate" placeholder="Carbohydrate" readonly>
              </div>
            </div>
        </div>
    </div>
    <div class="row g-2 align-items-center">
